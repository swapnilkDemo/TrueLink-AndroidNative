<resources>
    <!-- Base application theme. -->
    <style name="Theme.TrueLink" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/login_btn</item>
        <item name="colorSecondaryVariant">@color/login_btn</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="homeAsUpIndicator">@drawable/ic_logo_white_tgline</item>
        <!--  <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
          <item name="switchStyle">@style/Widget.App.Switch</item>
          <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
          <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
          <item name="materialButtonStyle">@style/ThemeOverlay.App.Button</item>-->
    </style>

    <style name="Theme.TrueLink.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TrueLink.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TrueLink.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--BottomSheet Dialog Theme-->

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="behavior_draggable">false</item>
        <!--<item name="snackbarStyle">@style/BottomSheet.Snackbar</item>-->
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BottomSheetDialogSoftInputMode" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">2650dp</item>
        <item name="behavior_draggable">false</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/ccp_ic_arrow_drop_down</item>
        <item name="android:textColor">@color/gray_200</item>
        <item name="android:textColorHint">@color/gray_200</item>
        <item name="android:textSize">@dimen/text16</item>
    </style>


    <style name="textViewFontInter" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="textViewFontSora" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sora</item>
    </style>


    <style name="ProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/transparent50</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/transparent50</item>
        <item name="android:dial">@color/colorPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <!--For custom switch mobile-->
    <style name="SwitchCompatThemeMobile" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/black</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

</resources>