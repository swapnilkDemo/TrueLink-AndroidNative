<resources>
    <!-- Base application theme. -->
    <style name="Theme.TrueLink" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/primary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/login_btn</item>
        <item name="colorSecondaryVariant">@color/login_btn</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/primary_color</item>
        <item name="homeAsUpIndicator">@drawable/ic_logo_white_tgline</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="hintTextColor">@color/gray_200</item>
        <!--  <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
          <item name="switchStyle">@style/Widget.App.Switch</item>
          <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
          <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
          <item name="materialButtonStyle">@style/ThemeOverlay.App.Button</item>-->
    </style>

    <style name="Theme.TrueLink.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--  -->
    </style>

    <style name="Theme.TrueLink.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TrueLink.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--BottomSheet Dialog Theme-->

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="behavior_draggable">false</item>
        <!--<item name="snackbarStyle">@style/BottomSheet.Snackbar</item>-->
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BottomSheetDialogSoftInputMode" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">2650dp</item>
        <item name="behavior_draggable">false</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/ccp_ic_arrow_drop_down</item>
        <item name="android:textColor">@color/gray_200</item>
        <item name="android:textColorHint">@color/gray_200</item>
        <item name="android:textSize">@dimen/text16</item>
    </style>


    <style name="textViewFontInter" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="textViewFontSora" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sora</item>

    </style>


    <style name="ProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/transparent50</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/margin20</item>
        <item name="android:windowBackground">@color/transparent50</item>
        <item name="android:dial">@color/primary_color</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="android:radius">@dimen/margin10</item>
    </style>

    <!--Custom styling for tab layout-->
    <style name="TabLayoutCustomStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="itemTextAppearanceActive">@color/white</item>
        <item name="textSize">@dimen/text12</item>
        <item name="fontFamily">@font/sora</item>
        <item name="itemTextAppearanceInactive">@color/transparent50</item>
    </style>

    <!--Custom style for material chip-->
    <style name="ChipCustomStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="chipCornerRadius">@dimen/margin15</item>
        <item name="chipStrokeColor">@color/tab_selector</item>
    </style>

</resources>