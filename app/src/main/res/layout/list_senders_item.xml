<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin5"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin5">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_sender_icon"
            android:layout_width="@dimen/margin60"
            android:layout_height="@dimen/margin60"
            android:layout_gravity="center"
            android:background="@drawable/background_circle"
            android:gravity="center"
            android:src="@drawable/ic_no_photo" />

        <ImageView
            android:id="@+id/tv_sender_tick"
            style="@style/textViewFontSora"
            android:layout_width="@dimen/margin24"
            android:layout_height="@dimen/margin24"
            android:layout_marginStart="-21dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/iv_sender_icon"
            android:elevation="@dimen/margin10"
            android:gravity="center"
            android:src="@drawable/ic_sender_tick" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sender_name"
            style="@style/textViewFontSora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColor="@color/gray_200"
            android:textSize="@dimen/text12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_safe_links"
                style="@style/textViewFontSora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin5"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_safe_link_small"
                android:drawablePadding="@dimen/margin5"
                android:textColor="@color/gray_200"
                android:textSize="@dimen/text10" />

            <TextView
                android:id="@+id/tv_suspicious_links"
                style="@style/textViewFontSora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_suspicious_small"
                android:drawablePadding="@dimen/margin5"
                android:textColor="@color/gray_200"
                android:textSize="@dimen/text10" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_total_links"
        style="@style/textViewFontSora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin10"
        android:text="100"
        android:textColor="@color/gray_200"
        android:textSize="@dimen/text14" />
</LinearLayout>