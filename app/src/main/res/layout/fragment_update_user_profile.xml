<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.user_profile.UpdateUserProfile">

    <include layout="@layout/toolbar_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin10"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:background="@color/colorSecondary"
            android:layour_height="wrap_content"
            android:padding="@dimen/margin10">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:layout_width="@dimen/margin70"
                android:layout_height="@dimen/margin70"
                android:src="@drawable/__icon__edit" />

            <ProgressBar
                android:id="@+id/profile_progress"
                android:layout_width="@dimen/margin70"
                android:layout_height="@dimen/margin70"
                android:background="@drawable/circle_shape"
                android:padding="@dimen/margin1"
                android:progressDrawable="@drawable/circular_progress_bar" />


        </RelativeLayout>
    </LinearLayout>

</FrameLayout>