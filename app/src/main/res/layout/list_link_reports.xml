<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_background"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/margin70"
            android:layout_height="@dimen/margin70"
            android:layout_margin="@dimen/margin10"
            android:src="@drawable/ic_no_photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/textViewFontSora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/dummy_value"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text14" />

                <TextView
                    android:id="@+id/tv_report_location"
                    style="@style/textViewFontInter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/margin5"
                    android:drawableTint="@color/green"
                    android:maxLines="1"
                    android:text="@string/dummy_value"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text14"
                    app:drawableLeftCompat="@drawable/ic_bullet" />

                <TextView
                    android:id="@+id/tv_report"
                    style="@style/textViewFontInter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:background="@drawable/background_round_no_border"
                    android:backgroundTint="@color/yellow_text"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/margin5"
                    android:text="@string/dummy_value"
                    android:textColor="@color/gray_200"
                    android:textSize="@dimen/text12" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_flag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy_value"
                android:textColor="@color/gray_200"
                android:textSize="@dimen/text12" />

            <TextView
                android:id="@+id/tv_created_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy_value"
                android:textColor="@color/gray_200"
                android:textSize="@dimen/text12" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginRight="@dimen/margin10"
        android:orientation="horizontal">

        <TextView
            style="@style/textViewFontSora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/reported_link"
            android:textColor="@color/white"
            android:textSize="@dimen/text14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_url"
            style="@style/textViewFontInter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:background="@drawable/background_round_no_border"
            android:backgroundTint="@color/secondary_color"
            android:maxLines="1"
            android:paddingLeft="@dimen/margin10"
            android:text="@string/dummy_value"
            android:textColor="@color/gray_200"
            android:textSize="@dimen/text12" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginRight="@dimen/margin10"
        android:layout_marginBottom="@dimen/margin10"
        android:text="@string/dummy_value"
        android:textColor="@color/gray_200"
        android:textSize="@dimen/text12" />
</LinearLayout>