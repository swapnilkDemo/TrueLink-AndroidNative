<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/margin10">

    <ImageView
        android:layout_width="@dimen/margin200"
        android:layout_height="@dimen/margin70"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin10"
        android:src="@drawable/ic_logo_white_tgline" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin50"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        android:text="@string/about_you"
        android:textColor="@color/gray_200"
        android:textSize="@dimen/_16sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondary"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/gender_male"
                    android:textColor="@color/male_blue"
                    android:textSize="@dimen/_16sdp" />

                <ImageView
                    android:layout_width="@dimen/margin70"
                    android:layout_height="@dimen/margin70"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@color/colorSecondary"
                    android:src="@drawable/avatar_male" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondary"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/gender_male"
                    android:textColor="@color/female_marun"
                    android:textSize="@dimen/_16sdp" />

                <ImageView
                    android:layout_width="@dimen/margin70"
                    android:layout_height="@dimen/margin70"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@color/colorSecondary"
                    android:src="@drawable/avatar_female" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondary"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/gender_male"
                    android:textColor="@color/other_voilet"
                    android:textSize="@dimen/_16sdp" />

                <ImageView
                    android:layout_width="@dimen/margin70"
                    android:layout_height="@dimen/margin70"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@color/colorSecondary"
                    android:src="@drawable/avatar_male" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>



            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_coutryCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:editable="false"
                android:focusable="false"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:padding="@dimen/_2sdp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray_200"
                android:textSize="@dimen/_16sdp"
                android:visibility="gone" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/hint_phone"
                android:inputType="phone"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray_200"
                android:textSize="@dimen/_16sdp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginRight="@dimen/margin20"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chk_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/txt_privacy_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray_200"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>


    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/btn_generateOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin20"
        android:backgroundTint="@color/login_btn"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/generate_otp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        app:spinning_bar_color="@android:color/black"
        app:spinning_bar_padding="8dp"
        app:spinning_bar_width="4dp" />
    <!--  app:spinning_bar_width="4dp" &lt;!&ndash; Optional &ndash;&gt;
      app:spinning_bar_color="#FFF" &lt;!&ndash; Optional &ndash;&gt;
      app:spinning_bar_padding="6dp" &lt;!&ndash; Optional &ndash;&gt;-->
</LinearLayout>